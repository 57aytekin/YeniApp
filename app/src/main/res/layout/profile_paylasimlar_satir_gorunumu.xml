<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/profile_paylasim_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 dk önce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_paylasim_post_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Evden henüzasdasdasd yeni çıkmıştım otobüs beklerken arkadan .."
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/post_tarih"
        app:layout_constraintTop_toBottomOf="@id/profile_paylasim_tarih" />


    <TextView
        android:id="@+id/profile_paylasim_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="15 Beğeni"
        app:layout_constraintLeft_toLeftOf="@id/profile_paylasim_tarih"
        app:layout_constraintTop_toBottomOf="@id/profile_paylasim_post_text" />

    <TextView
        android:id="@+id/profile_paylasim_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Yorum"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/profile_paylasim_like_count"
        app:layout_constraintStart_toEndOf="@id/profile_paylasim_like_count"/>

</android.support.constraint.ConstraintLayout>