<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DEDEDE"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/satir_gorunumu_profil_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/profile_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Username5757"
                app:layout_constraintStart_toEndOf="@id/satir_gorunumu_profil_photo"
                app:layout_constraintTop_toTopOf="@id/satir_gorunumu_profil_photo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yolda giderken arkamı döndüm ve .asdas asdasdsaadadsadasdasdaadsdad.."
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/satir_gorunumu_profil_photo"
                app:layout_constraintTop_toBottomOf="@id/satir_gorunumu_profil_photo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="15 Beğeni"
                app:layout_constraintLeft_toLeftOf="@id/satir_gorunumu_profil_photo"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="10 Yorum"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/textView7" />

            <Button
                android:id="@+id/button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/begen_button_bg"
                android:text="Beğen"
                android:drawableStart="@drawable/ic_like_24dp"
                android:textAllCaps="false"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="@id/textView7"
                app:layout_constraintTop_toBottomOf="@id/textView7" />

            <Button
                android:id="@+id/button1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/begen_button_bg"
                android:text="Yorum Yap"
                android:drawableStart="@drawable/ic_comment_24dp"
                android:padding="10dp"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@id/textView8"
                app:layout_constraintTop_toTopOf="@id/button" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>